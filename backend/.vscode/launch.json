{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI Backend (uv)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/bin/uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "jinja": true,
      "justMyCode": false,
      "console": "integratedTerminal"
    },
  ]
}